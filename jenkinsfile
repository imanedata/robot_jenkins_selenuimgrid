pipeline {
    agent {
        docker {
            image 'ppodgorsek/robot-framework'
        }
    }

    environment {
        SELENIUM_GRID_URL = "http://192.168.1.112:4444"
    }
    stages {
        stage('Install python')
                steps {
                sh ' sh python3.13 -m pip install -r requirements.txt'
            }
    }
    stage('Run Selenium Tests') {
            steps {
                // Exécution des tests avec Selenium
                sh 'robot tests.robot -Dselenium.grid.url=$SELENIUM_GRID_URL'
            }
     }
     success {
            echo '✅ Les tests Selenium ont réussi.'
        }

        failure {
            echo "❌ Les tests Selenium ont échoué."
        }

        unstable {
            echo '⚠️ Les tests sont instables.'
        }
      
          



}